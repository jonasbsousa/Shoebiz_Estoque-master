<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="10dp">

    <TextView
        android:id="@+id/tvDescrProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_1"
        android:textStyle="bold"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tvCodProduto"
        android:layout_below="@id/tvDescrProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_1" />

    <TextView
        android:id="@+id/tvQuant"
        android:layout_below="@id/tvDescrProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_1" />

    <TextView
        android:id="@+id/tvGrupoProduto"
        android:layout_below="@id/tvCodProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_1" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/tvGrupoProduto"
        android:layout_marginTop="6dp"
        android:background="@color/grey"/>
</RelativeLayout>