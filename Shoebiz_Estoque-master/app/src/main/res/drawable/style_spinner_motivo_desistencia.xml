<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="2dp" android:color="?attr/colorAccent" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="15dp" android:top="15dp" android:left="12dp" android:right="12dp"/>
                </shape>
            </item>

            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/ic_expand_more_white" android:tint="?attr/colorAccent"/>
            </item>
        </layer-list>
    </item>
</selector>